base_dir=$(dirname $0)/..

if [ "x$KAFKA_HEAP_OPTS" = "x" ]; then
    export KAFKA_HEAP_OPTS="-Xmx512M"
fi

exec $(dirname $0)/schema-registry-run-class io.confluent.kafka.schemaregistry.tools.GenerateBackupLog "$@" 
